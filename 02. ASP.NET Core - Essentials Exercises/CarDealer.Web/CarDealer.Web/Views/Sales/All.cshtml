@model IEnumerable<SaleListModel>

@{
    ViewData["Title"] = "All Sales";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>
                Customer
            </td>
            <td>
                Discount
            </td>
            <td>
                Price
            </td>
            <td>
                Discounted Price
            </td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model)
        {
            <tr>
                <td>
                    @sale.CustomerName
                </td>
                <td>
                    @((sale.Discount + (sale.IsYoungDriver ? 0.05 : 0)).ToString("F2"))%
                </td>
                <td>
                    @sale.Price.ToString("F2")
                </td>
                <td>
                    @sale.DiscountedPrice.ToString("F2")
                </td>
                <td class="text-center">
                    <a class="btn btn-sm btn-default" href="/sales/@sale.Id">More Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

